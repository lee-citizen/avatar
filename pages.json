{
	"easycom": { //easycom,按需自动注册组件。原则上可以把所有页面引入组件方法删掉，会自动引入。
		"autoscan": true,
		"custom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue",
			"^uni-(.*)": "@/components/uni-$1/uni-$1.vue",
			"^nx-(.*)": "@/components/nx-$1/nx-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/home",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationBarBackgroundColor":"#FF5650",
				"navigationBarTextStyle":"white"
				
				// "navigationStyle": "custom"
			}
		},
		{
			"path": "pages/index/save-success",
			"style": {
				"navigationBarTitleText": "保存成功",
				"navigationStyle": "custom"
			}
		}
		
	    ,{
            "path" : "pages/index/about",
            "style" :                                                                                    
            {
              "navigationBarTitleText": "关于",
              "navigationBarBackgroundColor":"#191925",
              "navigationBarTextStyle":"white"
            }
            
        }
    ],
	"subPackages": [{
		"root": "pages/public",
		"pages": [{
			"path": "404",
			"name": "404",
			"style": {
				"navigationBarTitleText": "页面不存在"
			}
		}]
	}],

	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "通用模板",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
